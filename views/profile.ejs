<!doctype html>
<html>
<head>
    <title>To Do List</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        
        <div class="col-sm-6">
          <h3>To Do List</h3>
          <ul class="toDoList">
          <% for(var i=0; i<tasks.length; i++) {%>
            <li class="toDoList">
              <form>
                <input class="checkBox" type="checkbox" <%= tasks[i].checked ? 'checked' : ''%>>
                <span class="item"><%= tasks[i].task %></span>
                <input class="editItem" type="text" value="<%= tasks[i].task %>">
                <button class="submitEdit">Submit</button>
                <span><i class="fa-solid fa-pen-to-square" aria-hidden="true"></i></span>
                <span><i class="fa fa-trash-o" aria-hidden="true"></i></span>
              </form>
              
            </li>
          <% } %>
          </ul>

          <h2>Add a task</h2>
          <form action="/todolist" method="POST">
            <input type="text" placeholder="Add a task" name="task">
            <button type="submit">Submit</button>
          </form>
        </div>
        

</div>
<script src="https://kit.fontawesome.com/27754e0c49.js" crossorigin="anonymous"></script>
<script src="main.js"></script>

</body>
</html>
