<!doctype html>
<html>
<head>
    <title>To Do List</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Parkinsans:wght@300..800&display=swap" rel="stylesheet">
</head>
<body>


        <h1>Shared To Do List</h1>
        



        <!-- LOCAL INFORMATION -->
      <section class="center">
        <form class="taskForm" action="/todolist" method="POST">
          <input type="text" placeholder="Add a task" name="task">
          <button type="submit">Submit</button>
        </form>

      
        <ul class="toDoList">
        <% for(var i=0; i<tasks.length; i++) {%>
          <li class="toDoList">
            <form>
              <input class="checkBox" type="checkbox" <%= tasks[i].checked ? 'checked' : ''%>>
              <span class="item"><%= tasks[i].task %></span>
              <input class="editItem" type="text" value="<%= tasks[i].task %>">
              <button class="submitEdit">Submit</button>
              <span><i class="fa-solid fa-pen-to-square" aria-hidden="true"></i></span>
              <span><i class="fa fa-trash-o" aria-hidden="true"></i></span>
            </form>
            
          </li>
        <% } %>
        </ul>

        
      </section>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>

          

        


<script src="https://kit.fontawesome.com/27754e0c49.js" crossorigin="anonymous"></script>
<script src="main.js"></script>

</body>
</html>
